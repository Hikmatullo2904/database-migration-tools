<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="yourname">
        <createTable tableName="job">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="minSalary" type="bigint">
                <constraints nullable="false" checkConstraint="minSalary > 0"/>
            </column>
            <column name="maxSalary" type="bigint">
                <constraints nullable="false" checkConstraint="maxSalary <= 10000"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="yourname">
        <insert tableName="job">
            <column name="title" value="Software Engineer"/>
            <column name="minSalary" valueNumeric="3000"/>
            <column name="maxSalary" valueNumeric="8000"/>
        </insert>
    </changeSet>

</databaseChangeLog>
